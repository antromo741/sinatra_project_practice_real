<h1>Ferret Edit Sheet</h1>
<form method="post" action="/ferrets/<%= @ferret.id %>">
<input type="hidden" value="patch" name="_method">
<p>
<div><label for="name">Name</label></div>
<input type="text" id="name" name="name" value="<%= @ferret.name %>" />
</p>

<p>
<div><label for="hair">Hair Type</label></div>
<input type="text" id="hair" name="hair" value="<%= @ferret.hair %>" />
</p>

<p>
<div><label for="short_description">Short Description</label></div>
<textarea rows="5" cols="40" id= "short_description" name="short_description"><%= @ferret.short_description %></textarea>
</p>
<input type="submit" value="Update Ferret">
</form>

